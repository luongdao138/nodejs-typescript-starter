{
  "name": "my-nodejs-backend-project",
  "version": "1.0.0",
  "description": "This is my favorite setup for my backend NodeJS project",
  "main": "dist/main.js",
  "author": "luongdao <luong.dao@pionero.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --max-warnings 0 --report-unused-disable-directives",
    "lint:fix": "eslint . --fix",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start:dev": "npm run build && NODE_ENV=development node ./dist/main.js",
    "start:watch": "nodemon --watch './src' --ignore '**/*.test.ts' --ignore '**/*.test.js' --ignore '**/*.spec.js' --ignore '**/*.spec.ts' --ext 'js,json,ts,tsx' --exec  'npm run build && NODE_ENV=development node ./dist/main.js'",
    "start:prod": "NODE_ENV=production node ./dist/main.js"
  }
}
